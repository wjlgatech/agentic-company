{
  "description": "Test API data fetching and display",
  "url": "http://localhost:3000/dashboard",
  "actions": [
    {
      "type": "navigate",
      "value": "http://localhost:3000/dashboard"
    },
    {
      "type": "wait_for_selector",
      "selector": "#data-table",
      "timeout": 10000
    },
    {
      "type": "screenshot",
      "value": "data_loaded.png"
    },
    {
      "type": "click",
      "selector": "#refresh-button"
    },
    {
      "type": "wait",
      "value": "2000"
    },
    {
      "type": "screenshot",
      "value": "data_refreshed.png"
    }
  ],
  "expected": {
    "no_console_errors": true,
    "network_requests_include": [
      "/api/data"
    ]
  }
}
